<h1>Add restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :category %>
<%= f.input :category, :collection => ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
<%= f.label :address %>
<%= f.text_field :address %>
<%= f.label :phone_number %>
<%= f.text_field :phone_number %>
<%= f.submit %>
<% end %>

